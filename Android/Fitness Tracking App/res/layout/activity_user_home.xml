<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diet_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserHome" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <Button
	        android:id="@+id/bt_health_profile"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Health profile" />
        
        <Button
	        android:id="@+id/bt_diets"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Diet Rules" />

        <Button
            android:id="@+id/bt_viewstepcount"
            style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
            android:text="Step Counts" />
	
	    <Button
	        android:id="@+id/bt_food_intake"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Food intake" />
	
	    <Button
	        android:id="@+id/bt_diet_suggestion"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Suggestions" />
	
	    <Button
	        android:id="@+id/bt_view_discussion"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Discussions" />
	
	    <Button
	        android:id="@+id/bt_feedbacks"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Feedbacks" />
	
	    <Button
	        android:id="@+id/bt_view_donors"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="View donors" />
	
	    <Button
	        android:id="@+id/bt_logout"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Logout" />
    </LinearLayout>
</ScrollView>